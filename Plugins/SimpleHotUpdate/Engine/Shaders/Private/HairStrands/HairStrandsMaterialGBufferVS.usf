#if VERTEXSHADER
 
void Main(
	FVertexFactoryInput Input,
	out float2 OutUV : TEXCOORD,
	out float4 OutPosition : SV_POSITION,
	nointerpolation out uint  OutPrimitiveId : PRIMITIVE_ID)
{
	const float2 UV = float2(Input.VertexId & 1, Input.VertexId >> 1) * 2;
	const float2 Pos = float2(UV.x, 1 - UV.y) * 2 - float2(1, 1);// * 4 - float2(2,2);
	OutPosition = float4(Pos, 0.5f, 1);
	OutUV = UV;
}

#endif // VERTEXSHADER
